<script type="text/javascript">
	var lottery_id = 1;
	var type = 1;
	var page = 1;
	var listData = new Array();
	var dialog = new auiDialog();
	var videoScreenshots, videoPlayer, UIPhotoViewer;
	apiready = function() {
		api.parseTapmode();
		$api.setStorage('lottery_id',1);
		videoPlayer = api.require('videoPlayer');
		videoScreenshots = api.require('videoScreenshots');
		UIPhotoViewer = api.require('UIPhotoViewer');
		init();
		api.addEventListener({
			name: 'scrolltobottom',
			extra: {
				threshold: 50
			} //设置距离底部多少距离时触发，默认值为0，数字类型
		}, function(ret, err) {
			page += 1;
			init();
		});
		//设置主题
		var skin = skinFunc('skin-red');
		var tab = new auiTab({
			element: document.getElementById("tab"),
		}, function(ret) {
			api.sendEvent({
				name: 'removeSkinEvent'
			});
			if (ret.index == 1) {
				skin = skinFunc('skin-red');
				lottery_id = 1;
				$api.setStorage('lottery_id',1);
			} else if (ret.index == 2) {
				skin = skinFunc('skin-green');
				$api.setStorage('lottery_id',2);
				lottery_id = 2;
			} else if (ret.index == 3) {
				skin = skinFunc('skin-blue');
				$api.setStorage('lottery_id',3);
				lottery_id = 3;
			}
			$('.search-input').val('')
			init()
			api.sendEvent({
				name: 'setSkinEvent'
			});
		});
		var tab1 = new auiTab({
			element: document.getElementById("tab1"),
		}, function(ret) {
			if (ret.index == 1) {
				type = 1;
			} else if (ret.index == 2) {
				type = 2;
			} else if (ret.index == 3) {
				type = 3;
			} else if (ret.index == 4) {
				type = 4;
			} else if (ret.index == 5) {
				type = 5;
			}
			$('.search-input').val('')
			init()
		});
		api.addEventListener({
			name: 'setSkinEvent'
		}, function(ret, err) {
			if (ret) {
				skin.setSkin();
			}
		});
		api.addEventListener({
			name: 'removeSkinEvent'
		}, function(ret, err) {
			if (ret) {
				skin.removeSkin();
			}
		});
		api.addEventListener({
			name: 'viewappear'
		}, function(ret, err) {
			init(); //初始化一下页面，重新加载一下数据
		});
	};

	function init() {
		$cjy.ajax({
			url: configIndex.phtodetail,
			method: 'post',
			data: {
				'lottery_id': lottery_id,
				'type': type,
				'page': page
			}
		}, function(ret) {
			 console.log($api.jsonToStr(ret));
			if (ret.data.post.length > 0) {
				var data = {};
				data.head_path = head_path;
				data.post = page != 1 ? listData.concat(ret.data.post) : ret.data.post;
				listData = data.post;
				if (page == 1) {
					$("#post-tpl").empty();
				}
				var html = template('list-post', data);
				$api.html($api.byId('post-tpl'), html);
			} else {
				if (page == 1) {
					$("#post-tpl").empty();
					var html = template('empty-list');
					$('#post-tpl').append(html);
				} else {
					page -= 1;
					toast1('没有更多了！');
				}
			}
		}, function(err) {
			if (err.code === 103) {
				$("#post-tpl").empty();
				var html = template('empty-list');
				$('#post-tpl').append(html);
				toast1('暂无相关文章');
			}
		});
		
	};

	function submitInputContent() {
		var content = $('.search-input').val();
		document.activeElement.blur();
		$cjy.ajax({
			url: configIndex.phtodetail,
			method: 'post',
			data: {
				'lottery_id': lottery_id,
				'content': content
			}
		}, function(ret) {
			ret.data.head_path = head_path;
			$("#post-tpl").empty();
			var html = template('list-post', ret.data);
			$("#post-tpl").append(html);
			api.parseTapmode();
		}, function(err) {
			if (err.code === 103) {
				$("#post-tpl").empty();
				var html = template('empty-list');
				$('#post-tpl').append(html);
				toast1('暂无相关文章');
			}
		});
	}

	//神评点赞
	function commentLike(id, member_id) {
		$cjy.ajax({
			url: configIndex.postLike,
			method: 'post',
			data: {
				'post_comment_id': id,
				'member_id': member_id,
				'type': 2
			}
		}, function(ret) {
			changeCommentImg(id);
		});
	};

	//点赞改变样式
	function changeCommentImg(id) {
		var path = $("#comment" + id).attr('src');
		if (path == '../../../image/praise.png') {
			var like = $("#conmentnum" + id).text();
			like = Number(like) + 1;
			$("#conmentnum" + id).text(like);
			path = '../../../image/praise-active.png'
		} else {
			var like = $("#conmentnum" + id).text();
			like = Number(like) - 1;
			$("#conmentnum" + id).text(like);
			path = '../../../image/praise.png'
		}
		$("#comment" + id).attr('src', path);

	};

	//帖子点赞/取消
	function dianzan(post_id, member_id) {
		$cjy.ajax({
			url: configIndex.postLike,
			method: 'post',
			data: {
				'post_id': post_id,
				'a_member_id': member_id,
				'type': 1
			}
		}, function(ret) {
			changeImg(post_id);
		});

	};
	//点赞改变样式
	function changeImg(post_id) {
		var path = $("#dianzan" + post_id).children().attr('src');
		if (path == '../../../image/praise.png') {
			var like = $("#p" + post_id).text();
			like = Number(like) + 1;
			$("#p" + post_id).text(like);
			path = '../../../image/praise-active.png'
		} else {
			var like = $("#p" + post_id).text();
			like = Number(like) - 1;
			$("#p" + post_id).text(like);
			path = '../../../image/praise.png'
		}
		$("#dianzan" + post_id).children().attr('src', path);

	};
	//实例化主题
	function skinFunc(skinName) {
		return new auiSkin({
			name: skinName,
			skinPath: '../../../css/' + skinName + '.css',
			default: true
		});
	};
	//类别切换
	$('.search-type-list2 .search-type-item2').click(function() {
		$('.search-type-list2 .search-type-item2').removeClass('active');
		$(this).addClass('active');
	});
	//加关注 已关注
	function focusToggle(obj, is_attention, member_id,type) {
//		$(obj).toggleClass('active');
		$cjy.ajax({
			url: configIndex.isAttention,
			method: 'post',
			data: {
				'a_member_id': member_id,
				'isAttention': is_attention
			}
		}, function(ret) {
			console.log(JSON.stringify(ret))

			var myClass = ".focusToggle"+member_id;
			if(type==1){ //关注的
				$(myClass).addClass('active');
			}else{ //取消
				$(myClass).removeClass('active');
			}
	

		});
	};
	//视频显示
	function showVideo(video) {
		var image_name = $api.getStorage('userId') + '' + Math.round(Math.random() * 999);
		//视频截图
		videoScreenshots.screenshots({
			videoUrl: video,
			time: 1,
			isRotation: false,
			name: image_name
		}, function(ret) {
			if (ret.status) {
				$('#uploaderFiles').attr('src', ret.path);
				video_image = ret.path;
			} else {
				console.log('视频截图失败');
			}
		});
	}
	//视频播放
	function openVideo(video_path) {
		//打开一个frame用于专门播放短视频模块依附
		api.openFrame({
			name: 'video_fra',
			url: 'video_fra.html',
			rect: {
				x: 0,
				y: 0,
				w: 'auto',
				h: 'auto'
			},
		});
		videoPlayer.open({
			rect: {
				x: 0,
				y: 0,
				w: api.winWidth,
				h: api.winHeight
			},
			path: video + video_path,
			fixedOn: 'video_fra',
			loop: true,
		}, function(ret, err) {
			if (ret.status) {
				//监听单击播放器
				videoPlayer.addEventListener({
					name: 'click'
				}, function(ret, err) {
					if (ret) {
						videoPlayer.close();
						api.closeFrame({
							name: 'video_fra'
						});
					} else {
						toast('退出失败');
						api.closeFrame({
							name: 'video_fra'
						});
					}
				});
			} else {
				toast('播放失败');
				api.closeFrame({
					name: 'video_fra'
				});
			}
		});
	};
	//预览图片
	function openP(obj) {
		var photoItem=[];
		var photoList=$(obj).parent().children();
		for(var i=0;i<photoList.length;i++){
			photoItem[i]=photoList.eq(i).attr("data-src");
		}   
		UIPhotoViewer.open({
			images: photoItem, 
			zoomEnabled:true,
			gestureClose:true,
			bgColor: '#000'
		}, function(ret, err) {
			if (ret) {   
				if (ret.eventType == 'change') { 
					api.sendEvent({
						name: 'previewPage',
						extra: {
							key1: ret.index + 1,
							key2: photoList.length 
						}
					});
				} else if (ret.eventType == 'click') {
					UIPhotoViewer.close();
					api.closeFrame({
					    name: 'photoView2_fra'
					});
				} else if (ret.eventType == 'gestureColse'){
					api.sendEvent({
						name: 'gestureColse' 
					});
				}
			}
		}); 
		setTimeout(function() {
			// var tabHeight = $api.offset($api.dom('#aui-header')).h; //tab切换栏高度
			api.openFrame({
				name: 'photoView2_fra',
				url: 'widget://app/derby/html/photoView2_fra.html',
				rect: {
					x: 0,
					y: 0,
					w: 'auto',
					h: 70
				},
				pageParam: {
					name: 'test'
				},
				bounces: false,
				bgColor: 'rgba(0,0,0,0)',
				vScrollBarEnabled: true,
				hScrollBarEnabled: true
			});
		}, 800);
	};
	//关闭预览
	function closeView() {
		UIPhotoViewer.close();
	};
</script>
