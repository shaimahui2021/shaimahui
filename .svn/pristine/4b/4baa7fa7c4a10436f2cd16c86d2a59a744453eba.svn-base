<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<link rel="stylesheet" type="text/css" href="../../css/api.css" />
		<link rel="stylesheet" type="text/css" href="../../css/aui.css" />
		<link rel="stylesheet" type="text/css" href="../../css/aui-flex.css" />
		<link rel="stylesheet" type="text/css" href="../../css/style.css" />
		<script type="text/javascript" src="../../script/fastclick.js"></script>
		<script type="text/javascript">
			if ('addEventListener' in document) {
				document.addEventListener('DOMContentLoaded', function() {
					FastClick.attach(document.body);
				}, false);
			}
		</script>
		<title>性别选择</title>
		<style>
			html,
			body {
				background-color: rgba(0, 0, 0, .1);
			}
			body{
				display: flex;
				align-items: flex-end;
				justify-content: center;
			}
			.aui-radio:checked, .aui-radio.aui-checked, .aui-checkbox:checked, .aui-checkbox.aui-checked {
			    background-color: #FF492B;
			    border: solid 1px #FF492B;
			}
			.aui-select-list{
				height: 10.5rem;
				overflow-y: auto;
				-webkit-overflow-scrolling: touch;
			}
			.aui-select-list img{
				display: inline-block;
				width: 2.5rem;
			}
		</style>
	</head>
	<body>
		<section id="dialog" class="aui-content w-100 question-dialog">
			<ul class="aui-list aui-select-list aui-list-in aui-list-noborder aui-padded-t-10  aui-padded-b-10">
				<li class="aui-list-item" tapmode  onclick="selectQus(1)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10 nan" type="radio" name="radio">
							您父亲的姓名是?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode onclick="selectQus(2)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							您配偶的生日是?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(3)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							您的小学校名是?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(4)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							您的大学校名是?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(5)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							我最大的爱好?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(6)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							您的中学校名是?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(7)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							我最喜爱的歌曲?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(8)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							我最喜爱的小说?
						</label>
				    </div>
				</li>
				<li class="aui-list-item" tapmode  onclick="selectQus(9)">
				    <div class="aui-list-item-inner">
				        <label class="flex align-center">
							<input class="aui-radio aui-margin-r-10" type="radio" name="radio">
							我最喜爱的食物?
						</label>
				    </div>
				</li>
			</ul>
		</section>
	</body>
</html>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/utils.js"></script>
<script type="text/javascript" src="../../script/jquery-2.1.4.js"></script> 
<script type="text/javascript">
	var questionData =[];
	apiready = function() {
		api.parseTapmode(); 
		$(document.body).on('touchend', function(e) {
			var dialog = $("#dialog")[0];
			if (!$.contains(dialog, e.target)) {
				setTimeout(function() {
					api.closeFrame();
				}, 200);
			}
		});
		questionData = ['您父亲的姓名是?',
			            '您配偶的生日是?',
			            '您的小学校名是?',
			            '您的大学校名是?',
			            '我最大的爱好?',
			            '您的中学校名是?',
			            '我最喜爱的歌曲?',
			            '我最喜爱的小说?',
			            '我最喜爱的食物?'];
	}; 
	function selectQus(num){ 
		api.sendEvent({
		     name: 'selectQus',
		     extra: {
		        question : questionData[num-1]
		      }
		});
		api.closeFrame();
	}
</script>
