.tellphone-icon {
	width: 1rem;
	height: 1.407rem;
}

.username-icon {
	width: 1rem;
	height: 1.0625rem;
}

.pwd-icon {
	width: 1rem;
	height: 1.15625rem;
}

.answer-icon {
	width: 1rem;
	height: 1rem;
}

.yzm-icon {
	width: 1rem;
	height: 1.19rem;
}
.getcode-item .aui-list-item-input{
	padding-right: 4.9rem;
}
.smsCode {
	position: absolute;
	right: 0;
	top: 0;
	width: 4.15rem;
	height: 2.1rem;
}

.smsCode img {
	width: 100%;
	height: 100%;
	border-radius: 0 .25rem .25rem 0;
}

.err-tip {
	padding-left: 2.5rem;
	padding-top: .25rem;
	color: #F8360A;
}

.absolute-bottom {
	width: 100%;
	position: fixed;
	bottom: 1rem;
}

@media screen and (-webkit-min-device-pixel-ratio: 1.5) {
	.aui-list.aui-list-in .aui-list-item {
		background-image: none !important;
	}
}

/* .getcode-item input {
	padding-right: 4.1rem;
} */

.getcode-item .aui-label-outlined:after {
	border: none;
}

.aui-list.aui-list-in .aui-list-item .aui-list-item-inner.sm-round-border {
	border-radius: .25rem;
	border: 1px solid #999;
}

.aui-list .aui-list-item-label-icon {
	padding-right: 0;
	padding-left: .75rem;
	min-width: 1.75rem;
}

.aui-list .aui-list-item-input {
	padding-left: .75rem;
}

.down-btn {
	position: absolute;
	right: .5rem;
	top: .5rem;
}
